{
  "name": "chat-central",
  "type": "module",
  "version": "0.1.0",
  "packageManager": "pnpm@9.15.0",
  "description": "One place for all your AI conversations. Automatically capture, search, organize, and export your AI conversations.",
  "license": "GPL-3.0-only",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "dev:reload": "tsx scripts/dev-reload.ts",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "zip:all": "wxt zip && wxt zip -b firefox",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "validate": "pnpm type-check && pnpm lint && pnpm test",
    "generate:ai-guides": "node scripts/generate-ai-guides.js",
    "postinstall": "wxt prepare",
    "prepare": "husky"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.20",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "deepmerge-ts": "^7.1.3",
    "dexie": "^4.0.9",
    "i18next": "^25.8.1",
    "jotai": "^2.10.0",
    "jszip": "^3.10.1",
    "lucide-react": "^0.563.0",
    "minisearch": "^7.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-i18next": "^16.5.4",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.13.0",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.10.0",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint-react/eslint-plugin": "^1.53.1",
    "@testing-library/jest-dom": "^6.6.0",
    "@testing-library/react": "^16.1.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/ws": "^8.5.13",
    "@wxt-dev/module-react": "^1.1.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.15.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.26",
    "fake-indexeddb": "^6.2.5",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.47",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0",
    "ws": "^8.18.0",
    "wxt": "^0.19.29"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md,css}": [
      "prettier --write"
    ]
  }
}
